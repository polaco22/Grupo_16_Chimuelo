<!--Para Ingresar a la pagina el camino seria Home>Productos>Elegir el primero y nuevamente clickear en la img del producto en detalle-->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Head -->
    <%- include('./includes/head') %>
</head>
<body>
    <!-- Header -->
    <%- include('./includes/header') %>
    <main>
    <form action="/" method="POST" class="register-form">
        <h2>Edición de productos aqui <i class="far fa-hand-point-down"></i></h2>
        <fieldset class= "register-field">
            <img img class="vista" src="/img/levelGod.jpg" alt="anteojopapu.jpg">
            <label for="image">Hace click en "Examinar" para cambiar la foto a mostrar del producto:</label>
            <input type="file" name="image" id="image" >
        </fieldset>
        <fieldset class= "register-field">
            <label for="name">Cambiar nombre del producto</label>
            <input type="text" name="name" id="name">
        </fieldset>
        <fieldset class= "register-field">
            <label for="name">Cambiar precio del producto</label>
            <input type="number" name="name" id="name">
        </fieldset>
        <fieldset class= "register-field">
            <label for="brand">Matriz ensambladora</label>
            <select name="brand" id="brand">
                <option value="Tipo" invalid>Seleccione tipo</option>
                <option value="Nogal">Nogal</option>
                <option value="Quebracho">Quebracho</option>
                <option value="Mix Carton y Yerba">50% Carton 50% Yerba Mate</option>
                <option value="Roble">Roble</option>
            </select>
        </fieldset>
        <fieldset class= "register-field">
            <label for="cristal">Tipo de Cristal</label>
            <select name="cristal" id="cristal">
                <option value="Tipo" invalid>Seleccione tipo</option>
                <option value="Tribido">Tríbido</option>
                <option value="Policarbonato">Policarbonato</option>
                <option value="Trivex">Trivex</option>
                <option value="Plastico">Plástico CR-39</option>
                <option value="Vidrio">Vidrio crown</option>
            </select>
        </fieldset>
        <fieldset class= "register-field">
            <label for="colors">Para agregarle una capa de pintura a la madera</label>
            <select name="colors" id="colors">
                <option value="Tipo" invalid>Seleccione tipo</option>
                <option value="Azul Electrico">Azul Electrico</option>
                <option value="Amarillo Vibrante">Amarillo Vibrante</option>
                <option value="Verde viviente">Verde Viviente</option>
                <option value="Rojo Naciente">Rojo Naciente</option>
            </select>
        </fieldset>
        <fieldset class = "register-field">
            <button type="submit">Enviar Cambios</button>
        </fieldset>
        </form> 
    </main>
    <!-- Footer -->
<%- include('./includes/footer')%>   
</body>
</html>