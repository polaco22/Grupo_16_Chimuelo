<!DOCTYPE html>
<html lang="en">
    <!-- Head -->
    <%- include('./includes/head') %>

<body>
    <!-- Header -->
    <%- include('./includes/header') %>   
    <main>
        <section class="producto">
            <article class="productIMG">

                <% if (listToShow.imagenes.length == 1) { %>
                    <img class="imgsup" src="../../uploads/products/<%=listToShow.imagenes[0].file%>" alt="anteojopapu.jpg">
                <% } else { %> 
                    <div class="perspectivas">
                    <img class="imgsup" src="../../uploads/products/<%=listToShow.imagenes[0].file%>" alt="anteojopapu.jpg">
                    </div>
                    <div class="perspectivas">
                        <div><img class="imgsup" src="../../uploads/products/<%=listToShow.imagenes[1].file%>" alt="anteojopapu.jpg"></div>
                    </div> 
                <% } %>
            </article>
            <article class="detalleproducto">
                <div class="datos">
                    <h3>Precio: </h3> $<%= listToShow.price %>
                    <h3>Descripci√≥n: </h3><%= listToShow.description %>
                </div>
                <div class="cart">
                    <% if (user) { %>
                    Cantidad:
                    <input type="number" placeholder="1" maxlength="3">
                    <button class="btn-add-cart"><a href="/product/cart/<%= listToShow.id %>"><span class="fa fa-shopping-cart"></span></a></button>
                    <% } %> 
                    <% if (user && user.admin == 1) { %>
                    <button class="btn-add-cart"><a href="/product/edit/<%= listToShow.id %>"><span class="fas fa-edit"></span></a> </button>
                    <form  class="btn-add-cart" type="submit" action="/product/delete/<%= listToShow.id %>?_method=DELETE" method="post">
                        <button class="btn-trash" ><span class="fas fa-trash"></span></button>
                    </form>
                    <% } %> 
                </div>
            </article>
        </section>
        <section class="OtrosProd">

        </section>



        
    </main>
    <!-- Footer -->
<%- include('./includes/footer')%>   
</body>

</html>