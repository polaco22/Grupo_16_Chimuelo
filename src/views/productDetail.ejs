<!DOCTYPE html>
<html lang="en">
    <!-- Head -->
    <%- include('./includes/head') %>

<body>
    <!-- Header -->
    <%- include('./includes/header') %>   
    <main>
        <section class="producto">
            <article class="productIMG">
                <img class="imgsup" src="../../uploads/products/<%=listToShow.image%>" alt="anteojopapu.jpg">
                <div class="perspectivas">
                    <div>Img1</div>
                    <div>Img2</div>
                    <div>Img3</div>
                </div> 
            </article>
            <article class="detalleproducto">
                <div class="datos">
                    <h3></h3>
                    <p class="monto">Precio: $<%= listToShow.price %></p>
                    <h5>Descripcion:  <%= listToShow.description %></h5>
                </div>
                <div class="cart">
                    Cantidad:
                    <input type="number" placeholder="1" maxlength="3">
                    <button class="btn-add-cart"><a href="/product/cart/<%= listToShow.id %>"><span class="fa fa-shopping-cart"></span></a></button>
                    <button class="btn-add-cart"><a href="/product/edit/<%= listToShow.id %>"><span class="fas fa-edit"></span></a> </button>
                    <form class="btn-add-cart" action="/product/delete/<%= listToShow.id %>?_method=DELETE" method="post">
                        <button type="submit"><span class="fas fa-trash"></span></button>
                    </form>
                </div>
            </article>
        </section>
        <section class="OtrosProd">

        </section>



        
    </main>
    <!-- Footer -->
<%- include('./includes/footer')%>   
</body>

</html>